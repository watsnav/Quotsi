<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="bottom|center"
    android:orientation="vertical"
    android:textAlignment="center">

    <TextView
        android:id="@+id/tvquote_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:fadingEdge="horizontal|none"
        android:fontFamily="@font/monaco"
        android:padding="10dp"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Holo"
        android:textColor="@android:color/holo_blue_bright" />

    <ImageButton
        android:id="@+id/ibtn_widget"
        android:layout_width="128dp"
        android:layout_height="96dp"
        android:background="@drawable/layout_bg"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:focusable="true"
        android:scaleType="center"
        android:src="@drawable/ic_new_small_b" />

</LinearLayout>